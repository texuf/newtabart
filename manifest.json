{
  "name": "New Tab New Art",
  "short_name": "New Tab New Art",
  "version": "2025.6",
  "description": "See a new piece of art every time you open a tab.",
  "manifest_version": 2,
  "permissions": ["storage"],
  "background": {
    "scripts": ["browser-polyfill.js", "background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    },
    "default_title": "New Tab New Art"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "content_scripts": [
    {
        "matches": ["file:///*/*"],
        "js": ["jquery-3.4.1.min.js","getart.js"],
        "all_frames": true
    }
  ],
  "chrome_url_overrides": {
    "newtab": "newpage.html"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "support@sweetpost.art",
      "strict_min_version": "58.0",
      "data_collection_permissions": {
        "required": ["none"]
      }
    }
  },
  "icons": { 
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png" 
  }
}